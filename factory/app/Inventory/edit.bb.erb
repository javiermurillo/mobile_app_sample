<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @inventory.object %>
    <h1>Edit <%= @inventory.brand%></h1>
    <%= link_to "Delete", :action => :delete, :id => @inventory.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @inventory.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Brand: </td>
              <td class="itemValue"><input type="text" name="inventory[brand]" value="<%= @inventory.brand %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Product: </td>
              <td class="itemValue"><input type="text" name="inventory[product]" value="<%= @inventory.product %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Qty: </td>
              <td class="itemValue"><input type="text" name="inventory[qty]" value="<%= @inventory.qty %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
