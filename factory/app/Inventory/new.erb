<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @inventory.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @inventory.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="inventory[brand]" class="fieldLabel">Brand</label>
            <input type="text" id="inventory[brand]" name="inventory[brand]" <%= placeholder("Brand") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="inventory[product]" class="fieldLabel">Product</label>
            <input type="text" id="inventory[product]" name="inventory[product]" <%= placeholder("Product") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="inventory[qty]" class="fieldLabel">Qty</label>
            <input type="text" id="inventory[qty]" name="inventory[qty]" <%= placeholder("Qty") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
