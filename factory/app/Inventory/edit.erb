<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @inventory.brand %></h1>
    <a href="<%= url_for :action => :show, :id => @inventory.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @inventory.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @inventory.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="inventory[brand]" class="fieldLabel">Brand</label>
            <input type="text" id="inventory[brand]" name="inventory[brand]" value="<%= @inventory.brand %>" <%= placeholder( "Brand" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="inventory[product]" class="fieldLabel">Product</label>
            <input type="text" id="inventory[product]" name="inventory[product]" value="<%= @inventory.product %>" <%= placeholder( "Product" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="inventory[qty]" class="fieldLabel">Qty</label>
            <input type="text" id="inventory[qty]" name="inventory[qty]" value="<%= @inventory.qty %>" <%= placeholder( "Qty" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
