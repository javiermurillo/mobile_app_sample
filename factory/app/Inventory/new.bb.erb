<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Inventory</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @inventory.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Brand: </td>
                <td class="itemValue"><input type="text" name="inventory[brand]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Product: </td>
                <td class="itemValue"><input type="text" name="inventory[product]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Qty: </td>
                <td class="itemValue"><input type="text" name="inventory[qty]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
